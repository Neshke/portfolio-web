{
  "name": "portfolio-web",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:css": "tailwindcss -i ./src/assets/main.css -o ./src/assets/output.css --watch",
    "build": "npm run build:css && vite build",
    "build:css": "tailwindcss -i ./src/assets/main.css -o ./src/assets/output.css --minify",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "dependencies": {
    "pinia": "^3.0.4",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^4.0.8",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^14.0.0",
    "autoprefixer": "^10.4.22",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "vite": "^7.1.11",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vitest": "^4.0.8"
  }
}
